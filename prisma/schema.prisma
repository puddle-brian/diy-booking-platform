model HoldRequest {
  id              String       @id @default(cuid())
  showId          String?
  showRequestId   String?
  requestedById   String
  respondedById   String?
  duration        Int
  reason          String
  customMessage   String?
  status          HoldStatus   @default(PENDING)
  requestedAt     DateTime     @default(now())
  respondedAt     DateTime?
  startsAt        DateTime?
