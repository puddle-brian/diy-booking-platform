model DateEntry {
  id          String      @id @default(cuid())
  
  // CORE: Who, Where, When
  date        DateTime    // The show date
  artistId    String
  venueId     String
  
  // STATUS: Simple workflow
  status      DateStatus  @default(INQUIRY)
  
  // PERFORMANCE
  billing     String?     // "headliner", "support", "opener", "local"
  setLength   Int?        // Minutes
  
  // DEAL: Financial terms (structured JSON)
  // Types: GUARANTEE, DOOR, SPLIT, GUARANTEE_VS_PERCENT, GUARANTEE_PLUS_SPLIT
  // Examples:
  //   { type: "GUARANTEE", amount: 500 }
  //   { type: "DOOR", percent: 100, expenses: 200 }
  //   { type: "SPLIT", artistPercent: 70, venuePercent: 30 }
  //   { type: "GUARANTEE_VS_PERCENT", guarantee: 400, percent: 80 }
  //   { type: "GUARANTEE_PLUS_SPLIT", guarantee: 300, artistPercent: 70, threshold: 500 }
  deal        Json?
  
  // Legacy fields (for backwards compat during migration)
  guarantee   Float?
  door        String?
  
  // DETAILS: Show logistics & rider (structured JSON)
  // {
  //   loadIn: "5:00 PM",
