model Show {
  id             String          @id @default(cuid())
  title          String
  date           DateTime
  venueId        String
  description    String?
  ticketPrice    Float?
  ageRestriction AgeRestriction?
  status         ShowStatus      @default(PENDING)
  createdById    String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  
