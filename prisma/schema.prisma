  dateEntries           DateEntry[]          @relation("VenueDateEntries")
  agentConversation     AgentConversation?   @relation("VenueAgentConversation")
  location              Location             @relation(fields: [locationId], references: [id])
  submittedBy           User?                @relation(fields: [submittedById], references: [id])

  @@index([locationId])
  @@index([venueType])
  @@index([capacity])
  @@index([ageRestriction])
  @@index([verified])
  @@index([name])
  @@index([createdAt])
  @@map("venues")
}

